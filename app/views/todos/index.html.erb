<div class="jumbotron">
	<h1 id="jumbotron_text"><span class="glyphicon glyphicon-pencil"> reminder</span></h1>
 
</div>

  <div id="menu_bar" class="btn-group btn-group-justified">
    <%= link_to 'dashboard' , todos_path, :class => 'btn btn-info', id: "news"%>
    <%= link_to 'settings' , todos_path, :class => 'btn btn-info'%>
    <%= link_to 'about' , todos_path, :class => 'btn btn-info' %>
    <%= link_to 'logout' , sessions_path, method: :delete, :class => 'btn btn-info' %>
  </div>
<div class="container-fluid">

	<div class="row center-block" id="category_input">
		<div class="col-sm-4 col-sm-offset-4 ">
		<br />
		<h4>I need to...</h4>
	    <input type="text" class="form-control"> <br/>
	    <h4>Send reminder in:</h4>
	    			<select class="form-control options" id="minutes">
				      <option>Minutes:</option>
				      <% for i in (30..120).step(15)%>
				        <option><%=i.to_s + " minutes" %></option>
				      <% end %>
				    </select>
	    			
	    			<select class="form-control options" id="hours">
				      <option>Hours:</option>
				      <% for i in 2..47%>
				        <option><%=i.to_s + " hours" %></option>
				      <% end %>
				    </select>

				    <select class="form-control options" id="days">
				      <option>Days:</option>
				      <% for i in 2..7%>
				        <option><%=i.to_s + " days" %></option>
				      <% end %>
				    </select>
				    <br /><br />
		<button class= "btn btn-info"><span class="glyphicon glyphicon-plus"></span></button>   
	  </div>
	</div>

	<div class="scroll">
		<ul>
			<%@todos.each do |todo| %>

			<%if todo.user_id == session[:current_user_id]%>

			<li data-todo-id="<%= todo.id %>">  
				<input type="checkbox" <%if todo.completed%>checked<%end%>>
				<%=todo.description%> 
        <span class="glyphicon glyphicon-trash"></span>
			</li>
			<%end%>

			<% end %>
		</ul>
	</div>

	<br />
	<br />


</div>
